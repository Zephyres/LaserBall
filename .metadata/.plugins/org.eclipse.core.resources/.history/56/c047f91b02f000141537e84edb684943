package entity;

import org.newdawn.slick.GameContainer;
import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.state.StateBasedGame;

public class Explosion extends Entity {
	private Image image;
	private float size, counter;
	
	public Explosion(float size) throws SlickException {
		image = new Image("images/explosion.png");
		
		this.size = size;
		setImage(image.getScaledCopy(0));
	}

	@Override
	public void update(GameContainer gc, StateBasedGame gs, int d)
			throws SlickException {
		if(counter < 400 && counter % 10 == 0)
			setImage(image.getScaledCopy(counter / 10));
		else if(counter >= 400 && counter % 10 == 0)
			setImage(image.getScaledCopy((800 - counter) / 10));
		
		if(counter >= 800)
			getWorld().removeObject(this);
		
		counter++;
	}
}
