package entity;

import org.newdawn.slick.GameContainer;
import org.newdawn.slick.Graphics;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.state.StateBasedGame;

public class RenderableEntity implements Entity {
private float x, y, rotation;
	
	public RenderableEntity(float x, float y, float r) {
		this.x = x;
		this.y = y;
		rotation = r;
	}
	
	public void setX(float x) {
		this.x = x;
	}
	
	public void setY(float y) {
		this.y = y;
	}
	
	public void setRotation(float r) {
		rotation = r;
	}
	
	public float getX() {
		return x;
	}
	
	public float getY() {
		return y;
	}
	
	public float getRotation() {
		return rotation;
	}

	@Override
	public void render(GameContainer gc, StateBasedGame gs, Graphics g)
			throws SlickException {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void update(GameContainer gc, StateBasedGame gs, int d)
			throws SlickException {
		// TODO Auto-generated method stub
		
	}
}
