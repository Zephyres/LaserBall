package entity;

public class RenderableEntity {
private float x, y, rotation;
	
	public RenderableEntity(float x, float y, float r) {
		this.x = x;
		this.y = y;
		rotation = r;
	}
	
	public void setX(float x) {
		this.x = x;
	}
	
	public void setY(float y) {
		this.y = y;
	}
	
	public void setRotation(float r) {
		rotation = r;
	}
	
	public float getX() {
		return x;
	}
	
	public float getY() {
		return y;
	}
	
	public float getRotation() {
		return rotation;
	}
}
